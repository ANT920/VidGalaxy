import sqlite3

conn = sqlite3.connect('vidgalaxy.db')
c = conn.cursor()

c.execute('''
CREATE TABLE IF NOT EXISTS videos (
    id INTEGER PRIMARY KEY,
    url TEXT,
    username TEXT,
    title TEXT,
    avatarUrl TEXT,
    timestamp REAL
)
''')

c.execute('''
CREATE TABLE IF NOT EXISTS users (
    id INTEGER PRIMARY KEY,
    email TEXT UNIQUE,
    password TEXT,
    username TEXT
)
''')

conn.commit()
conn.close()
